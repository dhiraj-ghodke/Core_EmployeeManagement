<div class="container-fluid mt-3">
    @using (Html.BeginForm("AssignedCompany", "EmployeeV1", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <h1>Assigned Company</h1>
        <p>Assign company to @ViewBag.Name candidate</p>

        <input type="hidden" id="UserId" name="UserId" value="@ViewBag.UserId" />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-floating">
            <div class="col-12">
                Company
                <div>
                    @Html.DropDownList("Company", null, "-- Select Company --", htmlAttributes: new { @class = "form-control" })
                </div>
            </div>
        </div>
        <br />

        <div class="form-floating">
            <input type="submit" value="Assign Company" class="btn btn-primary float-end" />
        </div>
        <br />
    }
</div>
