<style>
    .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        user-select: none;
    }
</style>
<div class="container">
    <main class="form-signin">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            @*<img class="mb-4" src="~/Images/logo.svg" alt="" width="272" height="87">*@
            <h1 class="h3 mb-3 fw-normal">Reset Password</h1>
            <hr />
            <div class="form-floating">
                <input type="number" class="form-control" placeholder="Registered Mobile" id="mobile" name="mobile" />
                @Html.Label("Mobile Number")
            </div><br />
            <button class="w-100 btn btn-lg btn-primary" type="submit">Get Login Details</button>
        }

        @if (!string.IsNullOrEmpty(ViewBag.Email) &&
            !string.IsNullOrEmpty(ViewBag.Password))
        {
            <div class="form-floating">
                <h3>Please use below login details:</h3>
                <table>
                    <tr>
                        <td><label style="font-weight:bold;">Email</label>:</td>
                        <td>@ViewBag.Email</td>
                    </tr>
                    <tr>
                        <td><label style="font-weight:bold;">Password</label>:</td>
                        <td>@ViewBag.Password</td>
                    </tr>
                    <tr>
                        <td colspan="2">Please save this login details for future purpose</td>                        
                    </tr>
                    <tr>
                        <td>@Html.ActionLink("Click to login", "Login", "Account")</td>
                    </tr>
                </table>
            </div>
        }
        @if (!string.IsNullOrEmpty(ViewBag.Error))
        {
            <div class="form-floating mb-4">
                <label style="color:red;">@ViewBag.Error</label>
            </div>
        }
    </main>

    @Html.Partial("_Footer")
</div>
<link href="~/css/signin.css" rel="stylesheet" />

