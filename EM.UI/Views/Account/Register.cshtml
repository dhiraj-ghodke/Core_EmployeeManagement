@using EM.Models

@model EM.Models.RegisterViewModel

@{
    Layout = null;
}

<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<meta name="description" content="">
<meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors">
<meta name="generator" content="Hugo 0.88.1">
<title>Employee Portal</title>

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="~/js/modernizr-2.8.3.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

<style>
    .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        user-select: none;
    }
</style>

<div class="container">
    <main class="form-signin">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @*<img class="mb-4" src="~/Images/logo.svg" alt="" width="272" height="87">*@

            @Html.AntiForgeryToken()
            <h1 class="h3 mb-3 fw-normal">Register</h1>
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-floating">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email", placeholder = "name@example.com" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                @Html.LabelFor(m => m.Email, new { @for = "Email" })
            </div><br />
            <div class="form-floating">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Enter password" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                @Html.LabelFor(m => m.Password, new { @for = "Password" })
            </div>
            <div class="form-floating">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Enter confirm password" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                @Html.LabelFor(m => m.ConfirmPassword, new { @for = "ConfirmPassword" })
            </div>
            <button class="w-100 btn btn-lg btn-primary" type="submit">Register</button>
        }

        <div class="form-floating">
            @Html.ActionLink("Already registered? Login", "Login", "Account")
        </div>
    </main>

    @Html.Partial("_Footer")
</div>

<link href="~/css/signin.css" rel="stylesheet" />